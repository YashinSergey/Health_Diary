<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="8dp"
    android:elevation="5dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_weight="1.4"
            android:contentDescription="@string/indicators_icon"
            app:srcCompat="@android:drawable/ic_input_add" />

        <TextView
            android:id="@+id/txtv_indicators_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="@string/indicators_title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtv_separator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_weight="1.65"
            android:gravity="start|center_vertical"
            android:text="@string/separator"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtv_indicators_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_weight="1.3"
            android:autofillHints="@string/value"
            android:ems="10"
            android:gravity="start|center_vertical"
            android:text="@string/value" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1.4"
            android:text="@string/btn_save"
            android:textSize="12sp"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>